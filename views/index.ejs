</head>
<body>
    <div class="background">
        <header>
            <h1><i class="fa-solid  fa-xs fa-list-check"></i> To-do IT</h1>
        </header>
        <main>
            <section class="New">
                <div class="title">
                    <h3 class="task"><i class="fa-solid fa-plus"></i> New Task</h3>
                    <h3 class="date"><i class="fa-solid fa-xs fa-calendar-days"></i> Date</h3>
                </div>
                <div class="f">
                    <form>
                        <input class="taskInput" type="text" placeholder="What's your task?">
                        <input class="monthInput" type="number" max="12" min="1" placeholder="Month" required>
                        <input class="dayInput" type="number" max="31" min="1" placeholder="Day" required>
                        <button type="submit" class="add"><i class="fa-solid fa-check"></i> Add</button>
                    </form>
                </div>
                
            </section>
            <section class="sort">
                <div class="div"></div>
                <button class="sortby"><i class="fa-solid fa-clock"></i> Sort By Time</button>
            </section>
        </main>
    </div>
</body>
<script src="../js/handleToDoList.js"></script>
</html>